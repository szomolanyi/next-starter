{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@now/node",
      "config": {
        "includeFiles": [
          "emails/**"
        ]
      }
    },
    {
      "src": "next.config.js",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "server.js"
    }
  ],
  "alias": [
    "ns-fomo.now.sh"
  ],
  "env": {
    "SENDGRID_API_KEY": "@sendgrid",
     "MONGODB_URI": "@mongo",
     "STANDALONE_GRAPHQL": "NO",
     "GRAPHQL_URI": "https://next-starter.fomo1.now.sh/graphql",
     "APP_EMAIL": "nextstarter@nextstarter.sk"
  }
}
